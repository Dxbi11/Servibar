datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["rhel-openssl-1.0.x"]
}

model Hotel {
  id       Int       @id @default(autoincrement())
  name     String
  floors   Floor[]
  rooms    Room[]
  products Product[]
  invoices Invoice[]
}

model Floor {
  id          Int    @id @default(autoincrement())
  floorNumber Int
  hotelId     Int
  hotel       Hotel  @relation(fields: [hotelId], references: [id])
  rooms       Room[]

  @@unique([floorNumber, hotelId])
}

model Room {
  id           Int        @id @default(autoincrement())
  roomNumber   Int
  hotelId      Int
  floorId      Int
  hotel        Hotel      @relation(fields: [hotelId], references: [id])
  floor        Floor      @relation(fields: [floorId], references: [id])
  minibarItems RoomStock[]
  locked       Boolean    @default(false)
  state        Int
  comment      String?
  checked      Boolean?

  @@unique([roomNumber, hotelId])
}

model Product {
  id           Int           @id @default(autoincrement())
  name         String
  price        Float?
  roomStocks   RoomStock[]
  invoiceItems InvoiceItem[]
  hotel        Hotel?        @relation(fields: [hotelId], references: [id])
  hotelId      Int?
  storehouse   StoreHouse?   @relation(fields: [storehouseId], references: [id])
  storehouseId Int?
}

model RoomStock {
  id        Int     @id @default(autoincrement())
  quantity  Int
  room      Room    @relation(fields: [roomId], references: [id])
  roomId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int

  @@unique([roomId, productId])
}

model Invoice {
  id      Int           @id @default(autoincrement())
  total   Float?
  items   InvoiceItem[]
  date    DateTime      @default(now())
  hotelId Int?
  hotel   Hotel?        @relation(fields: [hotelId], references: [id])
  comment String?
  room    Int?
}

model InvoiceItem {
  id        Int     @id @default(autoincrement())
  invoiceId Int
  productId Int
  quantity  Int
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model StoreHouse {
  id       Int       @id @default(autoincrement())
  products Product[]
  quantity Int?
}
